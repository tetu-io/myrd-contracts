{
  "name": "myrd-contracts",
  "version": "1.0.0",
  "description": "MYRD contracts",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:gql": "graphql-codegen --config ./gql/codegen.yml",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "yarn build && npx hardhat test --typecheck",
    "coverage": "yarn build && npx cross-env NODE_OPTIONS=\"--max_old_space_size=8192\" hardhat coverage --temp artifacts --max-memory 4096",
    "slither": "yarn build && slither .",
    "sporalyzer": "node sporalyzer.js --outputType listing --contract \"contracts/items/ItemCommon.sol:ItemCommon\"",
    "anvil": "anvil --silent --hardfork istanbul --disable-block-gas-limit --code-size-limit 1000000",
    "deploy-local": "hardhat deploy --write true --reset",
    "deploy-sonic": "yarn build && hardhat deploy --network sonic --write true && yarn verify-all-sonic",
    "deploy-nebula": "yarn build && hardhat deploy --network nebula_testnet --write true && yarn verify-all-nebula-testnet",
    "verify-all-sonic": "hardhat etherscan-verify --solc-input --api-url https://api.sonicscan.org --network sonic",
    "verify-all-nebula-testnet": "hardhat etherscan-verify --solc-input --api-url https://lanky-ill-funny-testnet.explorer.testnet.skalenodes.com/ --network nebula_testnet"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts"
  ],
  "author": "Tetu team <admin@tetu.io>",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@balancer-labs/v2-pool-utils": "^4.1.1",
    "@balancer-labs/v2-solidity-utils": "^4.0.0",
    "@balancer-labs/v2-vault": "^3.0.1",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@openzeppelin/contracts": "^5.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
